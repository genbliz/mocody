{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src/"
  },
  "include": ["src/**/*", "src/index.ts", "src/dynamo/operation-data.ts"],
  "exclude": ["node_modules", "**/dumps/**", "src/test/**", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
